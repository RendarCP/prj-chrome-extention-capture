{
  "manifest_version": 3,
  "name": "스크린샷 캡처",
  "version": "1.0",
  "description": "웹 페이지의 스크린샷을 캡처하고 편집하는 확장 프로그램",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["editor.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
